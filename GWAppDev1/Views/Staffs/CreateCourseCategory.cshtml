@model GWAppDev1.Models.CourseCategory
@{
    ViewBag.Title = "CreateCourseCategory";
}

<h2>Create a new CourseCategory</h2>
@using (Html.BeginForm("CreateCourseCategory", "Staffs", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        <label>NameCourseCategory</label>
        @Html.TextBoxFor(m => m.NameCourseCategory, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.NameCourseCategory, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label>Descriptions</label>
        @Html.TextBoxFor(m => m.Descriptions, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Descriptions, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}