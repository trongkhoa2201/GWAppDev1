@model GWAppDev1.ViewModels.CoursesTrainersViewModel
@{
    ViewBag.Title = "AssignTrainer";
}

<h2>Assign Trainer</h2>
@using (Html.BeginForm("AssignTrainer","Trainer", FormMethod.Post))
{
    <div class="form-group">
        <label>Course</label>
        @Html.DropDownListFor(
       m => m.CourseId,
       new SelectList(Model.Courses, "Id", "Name"),
       new { @class = "form-control" }
       )
    </div>
    <div class="form-group">
        <label>Trainer</label>
        @Html.DropDownListFor(
       m => m.TrainerId,
       new SelectList(Model.Trainers, "Id", "Email"),
       new { @class = "form-control" }
       )
    </div>
    <button type="submit" class="btn btn-primary">Assign</button>
}

